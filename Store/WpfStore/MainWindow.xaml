<Window x:Class="WpfStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="База данных СКЛАД">
            <StackPanel>
            <TextBlock Text="Показ таблиц БД" FontSize="20" 
                           Height="40" Width="300" HorizontalAlignment="Center"/>
            <ComboBox x:Name="SelectTable" SelectionChanged="SelectTable_SelectionChanged" 
                          FontSize="20" Height="40" Width="300" HorizontalAlignment="Center" >
                <TextBlock Text="Товары"/>
                <TextBlock Text="Типы товаров"/>
                <TextBlock Text="Поставщики"/>
                <TextBlock Text="Поставки"/>
            </ComboBox>
                <ListView Name="Table">
                    
                </ListView>
            </StackPanel>
        </TabItem>
        <TabItem Header="Запросы к БД">
            <StackPanel>
                <Button x:Name="Connect" Content="Подключение к базе данных">
                    
                </Button>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
